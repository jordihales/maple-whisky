%footer.footer(data-module='header')
  .grid-container
    .grid-x.grid-padding-x.align-center-middle.medium-up-3
      .cell.text-center.medium-text-left
        = link_to (image_pack_tag 'header-logo.svg', width: 80), root_path, class: 'footer__logo'
      .cell.text-center
        .footer__social
          %ul.menu.horizontal.text-center
            %li= link_to 'Facebook', current_account.facebook if current_account.facebook.present?
            %li= link_to 'Twitter', current_account.twitter if current_account.twitter.present?
            %li= link_to 'Instagram', current_account.instagram if current_account.instagram.present?
      .cell.text-center.medium-text-right
        = link_to 'Contact', 'https://www.etsy.com/uk/messages/new?with_id=58354294&referring_id=10404281&referring_type=shop&recipient_id=58354294', class: 'footer__link'
