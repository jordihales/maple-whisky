%section.scents
  .content
    .grid-container
      .grid-x.grid-padding-x.app-e--full-height.align-center-middle
        .cell.text-center
          %h1.scents__title.underline--secondary
            %span Our Scents
      .grid-x.grid-padding-x.align-center-middle.medium-up-2.large-up-3
        - scents.each do |scent|
          .cell
            .scents__content
              .scents__label{ style: "background-image: url(#{main_app.url_for(scent.content(:label).variant(resize: '1920x1080'))})" }
              .scents__text.text-center
                %h4.scents__name= scent.content(:name)
                .scents__info!= scent.content(:description)
